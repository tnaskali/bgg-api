<?xml version="1.0"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:common="http://www.boardgamegeek.com/common"
           xmlns:thing="http://www.boardgamegeek.com/thing"
           targetNamespace="http://www.boardgamegeek.com/thing"
           elementFormDefault="qualified">

  <xs:simpleType name="typeEnum">
    <xs:restriction base="xs:string">
      <xs:enumeration value="boardgame"/>
      <xs:enumeration value="boardgameexpansion"/>
      <xs:enumeration value="boardgameaccessory"/>
    </xs:restriction>
  </xs:simpleType>

  <xs:complexType name="name">
    <xs:attribute name="type" type="xs:string"/>
    <xs:attribute name="sortindex" type="xs:integer"/>
    <xs:attribute name="value" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="link">
    <xs:attribute name="type" type="xs:string"/>
    <xs:attribute name="id" type="xs:integer"/>
    <xs:attribute name="value" type="xs:string"/>
    <xs:attribute name="inbound" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="poll">
    <xs:sequence>
      <xs:element name="results" maxOccurs="unbounded">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="result" maxOccurs="unbounded">
              <xs:complexType>
                <xs:attribute name="value" type="xs:string"/>
                <xs:attribute name="numvotes" type="xs:integer"/>
                <xs:attribute name="level" type="xs:integer"/>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
          <xs:attribute name="numplayers" type="xs:string"/>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
    <xs:attribute name="name" type="xs:string"/>
    <xs:attribute name="title" type="xs:string"/>
    <xs:attribute name="totalvotes" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="video">
    <xs:attribute name="id" type="xs:integer"/>
    <xs:attribute name="title" type="xs:string"/>
    <xs:attribute name="category" type="xs:string"/>
    <xs:attribute name="language" type="xs:string"/>
    <xs:attribute name="link" type="xs:anyURI"/>
    <xs:attribute name="username" type="xs:string"/>
    <xs:attribute name="userid" type="xs:integer"/>
    <xs:attribute name="postdate" type="common:localDateTime"/>
  </xs:complexType>

  <xs:complexType name="videos">
    <xs:sequence>
      <xs:element name="video" type="thing:video" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="total" type="xs:integer"/>
  </xs:complexType>

  <xs:complexType name="versionItem">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element name="thumbnail" type="xs:anyURI"/>
      <xs:element name="image" type="xs:anyURI"/>
      <xs:element name="name" type="thing:name"/>
      <xs:element name="yearpublished" type="common:stringValue"/>
      <xs:element name="link" type="thing:link"/>
      <xs:element name="productcode" type="common:stringValue"/>
      <xs:element name="width" type="common:decimalValue"/>
      <xs:element name="length" type="common:decimalValue"/>
      <xs:element name="depth" type="common:decimalValue"/>
      <xs:element name="weight" type="common:decimalValue"/>
    </xs:choice>
    <xs:attribute name="type" type="xs:string"/>
    <xs:attribute name="id" type="xs:integer"/>
  </xs:complexType>

  <xs:complexType name="comment">
    <xs:attribute name="username" type="xs:string"/>
    <xs:attribute name="rating" type="xs:string"/>
    <xs:attribute name="value" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="ratings">
    <xs:sequence>
      <xs:element name="usersrated" type="common:integerValue"/>
      <xs:element name="average" type="common:decimalValue"/>
      <xs:element name="bayesaverage" type="common:decimalValue"/>
      <xs:element name="ranks">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="rank">
              <xs:complexType>
                <xs:attribute name="type" type="xs:string"/>
                <xs:attribute name="id" type="xs:integer"/>
                <xs:attribute name="name" type="xs:string"/>
                <xs:attribute name="friendlyname" type="xs:string"/>
                <xs:attribute name="value" type="xs:string"/>
                <xs:attribute name="bayesaverage" type="xs:string"/>
              </xs:complexType>
            </xs:element>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="stddev" type="common:decimalValue"/>
      <xs:element name="median" type="common:decimalValue"/>
      <xs:element name="owned" type="common:integerValue"/>
      <xs:element name="trading" type="common:integerValue"/>
      <xs:element name="wanting" type="common:integerValue"/>
      <xs:element name="wishing" type="common:integerValue"/>
      <xs:element name="numcomments" type="common:integerValue"/>
      <xs:element name="numweights" type="common:integerValue"/>
      <xs:element name="averageweight" type="common:decimalValue"/>
    </xs:sequence>
    <xs:attribute name="date" type="xs:string"/>
  </xs:complexType>

  <xs:complexType name="listing">
    <xs:sequence>
      <xs:element name="listdate" type="common:stringValue"/>
      <xs:element name="price">
        <xs:complexType>
          <xs:attribute name="currency" type="xs:string"/>
          <xs:attribute name="value" type="xs:decimal"/>
        </xs:complexType>
      </xs:element>
      <xs:element name="condition" type="common:stringValue"/>
      <xs:element name="notes" type="common:stringValue"/>
      <xs:element name="link">
        <xs:complexType>
          <xs:attribute name="href" type="xs:anyURI"/>
          <xs:attribute name="title" type="xs:string"/>
        </xs:complexType>
      </xs:element>
    </xs:sequence>
  </xs:complexType>

  <xs:complexType name="item">
    <xs:choice minOccurs="0" maxOccurs="unbounded">
      <xs:element name="thumbnail" type="xs:anyURI"/>
      <xs:element name="image" type="xs:anyURI"/>
      <xs:element name="name" type="thing:name"/>
      <xs:element name="description" type="xs:string"/>
      <xs:element name="yearpublished" type="common:stringValue"/>
      <xs:element name="datepublished" type="common:stringValue"/>
      <xs:element name="releasedate" type="common:localDateValue"/>
      <xs:element name="minplayers" type="common:integerValue"/>
      <xs:element name="maxplayers" type="common:integerValue"/>
      <xs:element name="link" type="thing:link"/>
      <xs:element name="seriescode" type="common:stringValue"/>
      <xs:element name="issueindex" type="common:stringValue"/>
      <xs:element name="poll" type="thing:poll"/>
      <xs:element name="playingtime" type="common:stringValue"/>
      <xs:element name="minage" type="common:integerValue"/>
      <xs:element name="videos" type="thing:videos"/>
      <xs:element name="versions">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="item" type="thing:versionItem" minOccurs="0" maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
      <xs:element name="comments">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="comment" type="thing:comment" minOccurs="0" maxOccurs="unbounded"/>
          </xs:sequence>
          <xs:attribute name="page" type="xs:string"/>
          <xs:attribute name="totalitems" type="xs:integer"/>
        </xs:complexType>
      </xs:element>
      <xs:element name="statistics">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="ratings" type="thing:ratings" maxOccurs="unbounded"/>
          </xs:sequence>
          <xs:attribute name="page" type="xs:string"/>
        </xs:complexType>
      </xs:element>
      <xs:element name="marketplacelistings">
        <xs:complexType>
          <xs:sequence>
            <xs:element name="listing" type="thing:listing" maxOccurs="unbounded"/>
          </xs:sequence>
        </xs:complexType>
      </xs:element>
    </xs:choice>
    <xs:attribute name="type" type="xs:string"/>
    <xs:attribute name="id" type="xs:integer"/>
  </xs:complexType>

  <xs:complexType name="items">
    <xs:sequence>
      <xs:element name="item" type="thing:item" maxOccurs="unbounded"/>
    </xs:sequence>
    <xs:attribute name="termsofuse" type="xs:anyURI"/>
  </xs:complexType>

  <xs:element name="items" type="thing:items"/>

</xs:schema>
